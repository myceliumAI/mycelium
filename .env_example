###############################################################################
#                       API Configuration                                     #
###############################################################################

# Port on which the FastAPI backend service will listen
API_PORT=8000

# Hostname for the FastAPI backend service
API_HOST=localhost

###############################################################################
#                       Database Configuration                                #
###############################################################################

# Port number for PostgreSQL database connection
POSTGRES_PORT=5432

# Hostname for the PostgreSQL database
POSTGRES_HOST=localhost

# PostgreSQL username for database authentication
POSTGRES_USER=admin

# PostgreSQL password for database authentication
POSTGRES_PASSWORD=__POSTGRES_PASSWORD__

# Name of the PostgreSQL database
POSTGRES_DB=mycelium_db

###############################################################################
#                       Keycloak Configuration                                #
###############################################################################

# Port number for Keycloak server
KC_PORT=8081

# Hostname for the Keycloak server
KC_HOST=localhost

# Keycloak administrator username
KC_BOOTSTRAP_ADMIN_USERNAME=admin

# Keycloak administrator password
KC_BOOTSTRAP_ADMIN_PASSWORD=__KC_BOOTSTRAP_ADMIN_PASSWORD__

# Keycloak management port
KC_MANAGEMENT_PORT=9000

# Name of the Keycloak realm
KC_REALM=mycelium

# Client ID for Keycloak authentication
KC_CLIENT_ID=__KC_CLIENT_ID__

# Optional: Google client ID
KC_GOOGLE_CLIENT_ID=

# Optional: Google client secret
KC_GOOGLE_CLIENT_SECRET=

###############################################################################
#                       Frontend Service Configuration                        #
###############################################################################

# Port on which the Vue.js frontend will be served
FRONTEND_PORT=8080

# Hostname for the frontend service in the Docker network
FRONTEND_HOST=localhost

# Logging level for Nginx reverse proxy (debug, info, notice, warn, error, crit)
NGINX_LOG_LEVEL=error